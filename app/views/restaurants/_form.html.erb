<%= form_for @restaurant, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :style, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :style, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weeks_on_list, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :weeks_on_list, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :neighborhood, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :neighborhood, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reserve, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reserve, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :twitter_handle, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :twitter_handle, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :exact_match, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :exact_match, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :skip_scan, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :skip_scan, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :city_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :buzz_mentions_count, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :buzz_mentions_count, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_current_buzz, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_current_buzz, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), restaurants_path, :class => 'btn' %>
  </div>
<% end %>
