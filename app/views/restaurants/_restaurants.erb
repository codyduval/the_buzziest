<table class="table table-striped">
  <thead>
    <tr>
    <th>Name</th>
    <th>Twitter</th>
    <th><%= sortable "total_current_buzz"%></th>
    <th><%= sortable "buzz_mentions_count"%></th>
    <th><%= sortable "created_at" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><a target="_blank" href=http://www.twitter.com/<%= restaurant.twitter_handle%>><%= restaurant.twitter_handle%></td>
        <td><%= number_with_precision(restaurant.total_current_buzz,:precision => 1) %></td>
        <td><%= link_to_if restaurant.buzz_mentions.exists?, restaurant.buzz_mentions_count, restaurant%></td>
        <td><%= restaurant.created_at.strftime("%b %d %y")  %></td>
        <td>
          <% if can? :edit, @restaurant %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, @restaurant %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), restaurant_path(restaurant), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :create, @restaurant %>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_restaurant_path, :class => 'btn btn-primary' %>
<% end %>